{
    "into": "public/build",
    "combine": {
        "js": {
            "into": "js",
            "basename": "app",
            "extension": "js",
            "wrapper": {
                "open": "src/js/scope-open.js",
                "close": "src/js/scope-close.js"
            },
            "files": [
                "node_modules/jquery/dist/jquery.min.js",
                "src/js/cookies.js",
                "src/js/report.js",
                "src/js/selecting.js",
                "src/js/login.js"
            ]
        },
        "css": {
            "into": "css",
            "basename": "styles",
            "extension": "css",
            "files": [
                "src/css/jars.css",
                "src/css/nav.css",
                "src/css/forms.css",
                "src/css/easy-tables.css",
                "src/css/icon.css",
                "php:src/php/script/iconcss.php"
            ]
        }
    },
    "collect": {
        "icon": {
            "into": "img/icon",
            "directory": "src/icon"
        }
    }
}